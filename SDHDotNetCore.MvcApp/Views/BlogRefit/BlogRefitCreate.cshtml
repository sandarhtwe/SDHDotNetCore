﻿@{
	ViewData["Title"] = "BlogRefit Create";
}

<form action="/blogrefit/save" method="post">
	<div class="mb-3">
		<label class="form-label">Title</label>
		<input type="text" name="BlogTitle" class="form-control">
	</div>
	<div class="mb-3">
		<label class="form-label">Author</label>
		<input type="text" name="BlogAuthor" class="form-control">
	</div>
	<div class="mb-3">
		<label class="form-label">Content</label>
		<input type="text" name="BlogContent" class="form-control">
	</div>
	<a href="/blogrefit" class="btn btn-secondary">Cancel</a>
	<button type="submit" class="btn btn-success">Save</button>
</form>