@model BlogDataModel

@{
    ViewData["Title"] = "Edit Blog";
}

<h4>Edit Blog</h4>

<div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" id="BlogTitle" class="form-control" value="@Model.BlogTitle">
</div>
<div class="mb-3">
    <label class="form-label">Author</label>
    <input type="text" id="BlogAuthor" class="form-control" value="@Model.BlogAuthor">
</div>
<div class="mb-3">
    <label class="form-label">Content</label>
    <input type="text" id="BlogContent" class="form-control" value="@Model.BlogContent">
</div>
<a href="/blogajax/list" class="btn btn-secondary">Cancel</a>
<button type="button" class="btn btn-primary ladda-button" data-style="expand-left" id="btnUpdate">
    <span class="ladda-label">Update</span>
</button>

@section scripts {
    <script>
        $('#btnUpdate').click(function (e) {
            e.preventDefault();

            var l = Ladda.create(this);
            l.start();

            var _reqModel = {
                BlogId:@Model.BlogId,
                BlogTitle: $('#BlogTitle').val(),
                BlogAuthor: $('#BlogAuthor').val(),
                BlogContent: $('#BlogContent').val(),
            };

            $.ajax({
                url: '/blogajax/update?id=' + _reqModel.BlogId,
                type: 'POST',
                data: {
                    reqModel: _reqModel
                },
                success: function (data) {
                    l.stop();
                    showMessage(data, "/blogajax/list");
                },
                error: function (request, status, error) {
                    console.log({ request, status, error });
                }
            });
        })
    </script>
}

